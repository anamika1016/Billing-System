<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark mb-1">Purchase History</h1>
      <p class="text-secondary small mb-0">Track and manage all customer transactions</p>
    </div>
    <%= link_to root_path, class: "btn btn-outline-primary px-4 rounded-pill shadow-sm d-flex align-items-center gap-2" do %>
      <span>+</span> New Transaction
    <% end %>
  </div>

  <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light border-bottom">
          <tr>
            <th class="ps-4 py-3 text-uppercase fs-7 fw-bold text-secondary">Purchase #</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary">Customer</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary">Date & Time</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary text-end">Total Amount</th>
            <th class="pe-4 py-3 text-center text-uppercase fs-7 fw-bold text-secondary">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if @purchases.any? %>
            <% @purchases.each do |p| %>
              <tr>
                <td class="ps-4">
                  <span class="text-primary fw-bold">PUR-<%= p.id.to_s.rjust(5, '0') %></span>
                </td>
                <td>
                  <div class="fw-medium"><%= p.customer_email %></div>
                </td>
                <td class="text-secondary small">
                  <%= p.created_at.strftime("%b %d, %Y") %><br>
                  <span class="text-muted"><%= p.created_at.strftime("%I:%M %p") %></span>
                </td>
                <td class="text-end fw-bold text-dark ps-4">
                  <%= number_to_currency(p.net_price) %>
                </td>
                <td class="pe-4 text-center">
                  <%= link_to purchase_path(p), class: "btn btn-sm btn-white border px-3 rounded-pill text-primary fw-bold fs-8" do %>
                    View Invoice
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="py-5 text-center text-secondary">
                <div class="mb-2 fs-1 text-muted opacity-25">ðŸ“‹</div>
                No purchases found yet. Start by generating a new bill.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .fs-7 { font-size: 0.75rem; letter-spacing: 0.05em; }
  .fs-8 { font-size: 0.85rem; }
  .btn-white { background: white; transition: all 0.2s; }
  .btn-white:hover { background: #f8f9fa; transform: translateY(-1px); box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); }
  .table-hover tbody tr { transition: background-color 0.2s; }
  .table-hover tbody tr:hover { background-color: rgba(13, 110, 253, 0.03); }
</style>
