<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-dark">Product Management</h1>
    <%= link_to "Add New Product", new_product_path, class: "btn btn-primary px-4 rounded-pill shadow-sm" %>
  </div>

  <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light border-bottom">
          <tr>
            <th class="ps-4 py-3 text-uppercase fs-7 fw-bold text-secondary">Product ID</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary">Name</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary text-end">Price</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary text-end">Stock</th>
            <th class="py-3 text-uppercase fs-7 fw-bold text-secondary text-end">Tax %</th>
            <th class="pe-4 py-3 text-center text-uppercase fs-7 fw-bold text-secondary">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td class="ps-4 fw-medium text-primary"><%= product.product_id %></td>
              <td>
                <div class="fw-bold"><%= product.name %></div>
              </td>
              <td class="text-end fw-medium"><%= number_to_currency(product.price, unit: "$") %></td>
              <td class="text-end">
                <span class="badge <%= product.stock > 10 ? 'bg-success-subtle text-success' : 'bg-danger-subtle text-danger' %> rounded-pill px-3">
                  <%= product.stock %> items
                </span>
              </td>
              <td class="text-end text-secondary"><%= product.tax_percentage %>%</td>
              <td class="pe-4 text-center">
                <div class="btn-group shadow-sm rounded-3 overflow-hidden">
                  <%= link_to product, class: "btn btn-sm btn-white border-end", title: "View" do %>
                    <i class="bi bi-eye text-primary">View</i>
                  <% end %>
                  <%= link_to edit_product_path(product), class: "btn btn-sm btn-white border-end", title: "Edit" do %>
                    <i class="bi bi-pencil text-warning">Edit</i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .fs-7 { font-size: 0.8rem; }
  .btn-white { background: white; }
  .btn-white:hover { background: #f8f9fa; }
  .table-hover tbody tr:hover { background-color: rgba(0, 123, 255, 0.02); }
  .card { border: 1px solid rgba(0,0,0,0.05) !important; }
</style>
