<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="bg-primary py-4 text-center">
          <h2 class="text-white fw-bold mb-0"><%= @product.name %></h2>
          <span class="badge bg-white text-primary rounded-pill px-3 mt-2"><%= @product.product_id %></span>
        </div>
        
        <div class="card-body p-4">
          <div class="row g-4 text-center">
            <div class="col-4">
              <div class="text-secondary fs-7 text-uppercase fw-bold mb-1">Price</div>
              <div class="fs-4 fw-bold text-dark"><%= number_to_currency(@product.price) %></div>
            </div>
            <div class="col-4">
              <div class="text-secondary fs-7 text-uppercase fw-bold mb-1">Stock</div>
              <div class="fs-4 fw-bold text-dark"><%= @product.stock %></div>
            </div>
            <div class="col-4">
              <div class="text-secondary fs-7 text-uppercase fw-bold mb-1">Tax</div>
              <div class="fs-4 fw-bold text-dark"><%= @product.tax_percentage %>%</div>
            </div>
          </div>

          <hr class="my-4 opacity-50">

          <div class="d-grid gap-2">
            <%= link_to edit_product_path(@product), class: "btn btn-warning py-2 fw-bold text-white rounded-3 shadow-sm" do %>
              Edit Product Details
            <% end %>
            
            <div class="row g-2">
              <div class="col-6">
                <%= link_to products_path, class: "btn btn-outline-secondary w-100 py-2 rounded-3" do %>
                  Back to List
                <% end %>
              </div>
              <div class="col-6">
                <%= button_to "Delete Product", @product, method: :delete, class: "btn btn-outline-danger w-100 py-2 rounded-3", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .fs-7 { font-size: 0.75rem; }
  .card { border: 1px solid rgba(0,0,0,0.05) !important; }
</style>
